<?xml version="1.0" encoding="UTF-8" ?>
<controls:ItemBaseView
    x:Class="SoundCloudClone.Controls.ItemTextView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:SoundCloudClone.Controls"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Style="{StaticResource FlexItem}"
    mc:Ignorable="d">
    <Label
        x:Name="TextLabel"
        d:Text="Text value"
        FlexLayout.Grow="1"
        Style="{StaticResource DefaultItem}" />

    <Label
        x:Name="DetailLabel"
        Margin="0,0,5,0"
        d:IsVisible="true"
        d:Text="Detail value"
        IsVisible="false"
        Style="{StaticResource DefaultItem}"
        TextColor="{DynamicResource TextSecondaryColor}" />

    <Image
        x:Name="ArrowImage"
        d:IsVisible="true"
        IsVisible="false"
        Source="{DynamicResource library_arrow}" />
</controls:ItemBaseView>
