<?xml version="1.0" encoding="UTF-8" ?>
<controls:ItemBaseView
    x:Class="SoundCloudClone.Controls.ItemSwitchView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:SoundCloudClone.Controls"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Style="{StaticResource FlexItem}"
    mc:Ignorable="d">
    <Label
        x:Name="TextLabel"
        d:Text="Text value"
        FlexLayout.Grow="1"
        Style="{StaticResource DefaultItem}" />

    <Switch
        x:Name="ToggleSwitch"
        d:IsToggled="True"
        IsToggled="false"
        OnColor="{DynamicResource Accent}" />
</controls:ItemBaseView>
