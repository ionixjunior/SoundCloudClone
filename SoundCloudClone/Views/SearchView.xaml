<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="SoundCloudClone.Views.SearchView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:converters="clr-namespace:SoundCloudClone.Converters">
    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:CounterToVisibilityConverter x:Key="CounterToVisibilityConverter" />
            <converters:CounterToVisibilityInverterConverter x:Key="CounterToVisibilityInverterConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <NavigationPage.TitleView>
        <OnPlatform x:TypeArguments="View">
            <OnPlatform.Android>
                <SearchBar
                    Margin="0,0,15,0"
                    FontFamily="{StaticResource FontLight}"
                    FontSize="Large"
                    Placeholder="Search SoundCloud"
                    PlaceholderColor="{StaticResource TextSecondaryColor}"
                    TextChanged="OnTextChanged"
                    TextColor="{DynamicResource TextPrimaryColor}" />

            </OnPlatform.Android>

            <OnPlatform.iOS>
                <Label Style="{StaticResource TitleNavigationPage}" Text="Search" />
            </OnPlatform.iOS>
        </OnPlatform>
    </NavigationPage.TitleView>

    <ContentPage.Content>
        <Grid>
            <FlexLayout
                AlignItems="Center"
                Direction="Column"
                IsVisible="{Binding Results.Count, Converter={StaticResource CounterToVisibilityInverterConverter}}"
                JustifyContent="Center">
                <Image
                    Margin="0,0,0,50"
                    HeightRequest="140"
                    Source="search_magnifier"
                    WidthRequest="140" />

                <Label
                    Margin="5"
                    FontSize="Title"
                    Text="Search SoundCloud" />
                <Label
                    Margin="5"
                    FontSize="Subtitle"
                    Text="{OnPlatform iOS='Find artists, music and audio',
                                      Android='Find artists, tracks, albums and playlists'}"
                    TextColor="{StaticResource TextSecondaryColor}" />
            </FlexLayout>

            <OnPlatform x:TypeArguments="View">
                <OnPlatform.Android>
                    <ListView
                        BackgroundColor="{DynamicResource ContentPageBackground}"
                        HasUnevenRows="True"
                        IsVisible="{Binding Suggestions.Count, Converter={StaticResource CounterToVisibilityConverter}}"
                        ItemSelected="OnItemSelected"
                        ItemsSource="{Binding Suggestions}"
                        SeparatorVisibility="None">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <ViewCell.View>
                                        <FlexLayout
                                            Margin="30,0,20,0"
                                            AlignItems="Center"
                                            HeightRequest="60"
                                            JustifyContent="SpaceBetween">
                                            <Label FontSize="Medium" Text="{Binding Description}" />

                                            <Image
                                                HeightRequest="14"
                                                Source="{DynamicResource search_suggestion}"
                                                WidthRequest="14" />
                                        </FlexLayout>
                                    </ViewCell.View>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                </OnPlatform.Android>

                <OnPlatform.iOS>
                    <CollectionView IsVisible="{Binding Results.Count, Converter={StaticResource CounterToVisibilityConverter}}" ItemsSource="{Binding Results}" />
                </OnPlatform.iOS>
            </OnPlatform>
        </Grid>
    </ContentPage.Content>
</ContentPage>
